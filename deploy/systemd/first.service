[Unit]
Description=Telegram bot 'SuperPuperTelegramBot'
After=syslog.target
After=network.target

[Service]
Type=idle
User=root
WorkingDirectory=/home/ubuntu/projecrs/bot/first
EnvironmentFile=/home/ubuntu/.local/bin/virtualenvwrapper.sh
ExecStart=/home/ubuntu/venv/bot/bin/python /main.py
RestartSec=10
Restart=always
 
[Install]
WantedBy=multi-user.target

